{% liquid 
  assign logo = section.settings.logo 
  assign layout = section.settings.layout 
  assign nav_link = section.settings.nav_link 
%}

{%- if layout == 'boxed' -%} <div class="container"> {%- endif -%}
  <div class="header-desktop header-desktop-01">
    <div class="header-desktop__inner">
      <div class="logo">
        {% if logo != blank %} 
          {% comment %} {% render 'image-style', image: logo , originQuality: true %} {% endcomment %}
          <img src="{{logo | img_url: 'master'}}" alt="ArenaCommerce">
        {%- else -%}
          <a href="/">{{shop.name}}</a>
        {%- endif -%}
      </div>
      <div class="horizontal-nav d-none d-lg-flex">
        <ul class="horizontal-nav__content">
          {%- for link in linklists[nav_link].links -%}
            <li class="nav-link">
              <a href="{{link.url}}">{{link.title}}</a>
            </li>
          {%- endfor -%}
        </ul>
      </div>
      <div class="icon-list">
        <div class="icon-list__item account">
          {%- capture account_url -%}
            {%- if customer -%}
              /account
            {%- else -%}
              /account/login
            {%- endif -%}
          {%- endcapture -%}
          <a href="{{account_url}}">
            {%- include 'svg', type: 'account' -%}
          </a>
        </div>
        <div class="icon-list__item cart">
          {%- include 'svg', type: 'cart' -%}
          <div class="number">0</div>
        </div>
        <div class="d-lg-none icon-list__item menu">
          <a href="javascript:void(0)" class="js-handle-nav-mobile">
            {%- include 'svg', type: 'icon-menu' -%}
          </a>
        </div>
      </div>
    </div>
  </div>
{% if layout == 'boxed'  %}</div>{%- endif -%}