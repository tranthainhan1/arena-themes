{% liquid 
  assign layout     = section.settings.layout
  assign heading    = section.settings.heading
  assign subheading = section.settings.subheading
  assign btn_title  = section.settings.btn_title
  assign btn_url    = section.settings.btn_url
%}

{%- capture classResp -%}
{%- endcapture -%}

<div class="icons-cart" data-section-id="{{section.id}}" data-section-type="icons-cart">
  {% if layout == 'boxed' %} <div class="container"> {%- endif -%}  
    <div class="icons-cart__wrapper">
      <div class="icons-cart__heading">
        <div class="heading">
          <span class="content">{{heading}}</span>
        </div>
        <div class="subheading">
          <span class="content">{{subheading}}</span>
        </div>
      </div>
      <div class ="icons-cart__list">
        <div class ="js-tns">
          {%- for block in section.blocks -%}
            {% liquid 
              assign title     = block.settings.block_title
              assign icon_html = block.settings.icon
              assign block_url = block.settings.block_url | default: 'javascript:void(0)'
            %}
            <div class="icons-cart__item">
              <a href="{{block_url}}">
                <div class="wrapper">
                  <div class="icon_box">
                    {{icon_html}}
                  </div>
                  <div class="title">
                    <span class="content">{{title}}</span> 
                  </div>
                </div>
              </a>
            </div>
          {%- endfor -%}
        </div>
        <div class="js-tns-controls section-{{section.id}} d-none">
          <div class="btn-prev">
            {% render 'svg', type: 'arrowLeft'  %}
          </div>
          <div class="btn-next">
            {% render 'svg', type: 'arrowRight'  %}
          </div>
        </div>
      </div>
      {%- if btn_title != blank -%}
        <div class="icons-cart__button">
          <a href="{{btn_url | default : 'javascript:void(0)'}}" class="btn btn-1">
            <span>{{btn_title}}</span>
            {%- include 'svg', type: 'arrowRight' -%}
          </a>
        </div>
      {%- endif -%}
    </div>
  {% if layout == 'boxed' %} </div> {%- endif -%}
  <script type="application/json" id="config-tns-{{section.id}}">
    {"loop":false,"nav":false,"preventActionWhenRunning":true,"preventScrollOnTouch":"auto","slideBy":1,"responsive":{"1":{"items":1,"gutter":25},"375":{"items":1.7},"479":{"items":2},"576":{"items":2.5},"768":{"items":3},"992":{"items":3.5,"gutter":30},"1052":{"items":4},"1440":{"items":5}}}
  </script>
</div>