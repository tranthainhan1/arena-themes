<div class="collection collection-sub-task" data-section-id="{{section.id}}" data-section-type="collection-sub-task">
  <div class="container">
    <div class="d-none d-lg-block">
      {% render 'breadcrumb-snippets' type: 'task'  %}
    </div>

    <div class="related-collection">
      <div class="related-collection__wrapper">
        <div class="heading">
          <div class="title">
            <h3>{{collection.title}}</h3>
          </div>
          <div class="subtitle">
            <span>{{collection.description}}</span>
          </div>
        </div>
        <div class="row related-collection__list">
          {% liquid 
            assign collection_parent =  collection.metafields.c_f.collection_parent
            if collection_parent != blank
              assign realted_collection = collections[collection_parent].metafields.c_f.collection_child | split: '|'
            else 
              assign realted_collection = shop.metafields.global_related_collection | split: '|'
            endif
          %}
          
          {%- for handle in realted_collection -%}
            <div class="col-6 col-md-4 col-lg-4 col-xl-2 d-flex related-collection__item">
              <a href="{{collections[handle].url}}">
                {{collections[handle].metafields.c_f.collection_svg}}
                <span>{{collections[handle].title}}</span>
              </a>
            </div>
          {%- endfor -%}
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-12 col-lg-3 sidebar" id="js-sidebar-container">
        <div class="d-lg-none sidebar_header">
          <div class="title">
            <span>{{ 'collection_template.themes.filter' | t}}</span>
            <a href="javascript:void(0)" class="js-close-sidebar">
              {% render 'svg' type: 'close' %}
            </a> 
          </div>
          <div class="sort-by">
            <label for="sort_by">{{ 'collection_template.themes.sort_by' | t}}</label>
            <select name="sort_by" id="sort_by">
              <option value="Most Recent">{{ 'collection_template.themes.select.option_1' | t}}</option>
            </select>
            {% render 'svg' type: 'angle-down' %}
          </div>
        </div>
        <div class="filter">
          {%- for block in section.blocks -%}
            {%- case block.type -%}
              {%- when 'filter_group' -%}
                {% liquid 
                  assign title = block.settings.title  
                %}
                <div class="filter-group">
                  <div class="header">
                    <p>{{title}}</p>
                  </div>
                  <div class="filter-group__body">
                    {%- for i in (1..5) -%}
                      <div class="filter-item">
                        <div class="d-flex checkbox">
                          <input type="checkbox" id="filter_item_{{block.id}}_{{i}}">
                          <label for="filter_item_{{block.id}}_{{forloop.index}}">Text</label>
                        </div>
                      </div>
                    {%- endfor -%}
                  </div>
                </div>
              {% comment %} end {% endcomment %}
              {%- when 'filter_price' -%}
                  {% liquid 
                    assign title = block.settings.title  
                  %}
                <div class="filter-price">
                  <div class="header">
                    <p>{{title}}</p>
                  </div>
                  <div class="filter-price__body">
                    <div class="row">
                      <div class="col-6">
                        <div class="filter-price__min">
                          <label for="price_min">{{ 'general.min' | t}}</label>
                          <div class="input-group">
                            <span>{{ cart.currency.symbol }}</span>
                            <input type="number" placeholder="0" id="price_min">
                          </div>
                        </div>
                      </div>
                      <div class="col-6">
                        <div class="filter-price__max">
                          <label for="price_max">{{ 'general.max' | t}}</label>
                          <div class="input-group">
                            <span>{{ cart.currency.symbol }}</span>
                            <input type="number" placeholder="500" id="price_max">
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              {% comment %} end {% endcomment %}
              {%- when 'filter_rating' -%} 
                {% liquid 
                  assign title = block.settings.title 
                %}              
                <div class="filter-group filter-rating">
                  <div class="header">
                    <p>{{title}}</p>
                  </div>
                  <div class="filter-group__body">
                    {%- for i in (1..5) -%}
                      {%- assign rating = 'rating-'| append: i -%}
                      <div class="filter-item">
                        <div class="d-flex checkbox">
                          <input type="checkbox" id="filter_item_{{block.id}}_{{i}}">
                          <label for="filter_item_{{block.id}}_{{forloop.index}}">
                            {% render 'svg' type: rating  %}
                          </label>
                        </div>
                      </div>
                    {%- endfor -%}
                  </div>
                </div>
              {% comment %} end {% endcomment %}
            {%- endcase -%}
          {%- endfor -%}
          <div class="sidebar_btn">
            <button id="filter_clear" class="btn btn-2 clear">{{ 'collection_template.themes.btn.clear' | t}}</button>
            <button id="filter_apply" class="btn btn-2 apply">{{ 'collection_template.themes.btn.apply' | t}}</button>
          </div>
        </div>
      </div>
      <div class="col-12 col-lg-9 product-grid">
        <div class="toolbar">
          <div class="toolbar_right">
            <div class="pagination-showing">    
              {%- if collection.all_products_count > 10  -%}
                <span>{{ 'collection_template.tasks.pagination.showing' | t: count: collection.all_products_count}}</span>
              {%- else -%}
                <span>{{ 'collection_template.tasks.pagination.showing_all' | t: count: collection.all_products_count}}</span>
              {%- endif -%}
            </div>

            <div class="d-none  d-lg-flex sort-by">
              <label for="sort_by">{{ 'collection_template.themes.sort_by' | t}}</label>
              <select name="sort_by" id="sort_by">
                <option value="Most Recent">{{ 'collection_template.themes.select.option_1' | t}}</option>
              </select>
              {% render 'svg' type: 'angle-down' %}
            </div>
            <div class="d-lg-none">
              <a href="javascript:void(0)" id="js-open-sidebar">
                {% render 'svg' type: 'filter' %}
              </a>
            </div>
          </div>
        </div>
        <div class="product-grid__wrapper">
          {% paginate collection.products by 10 %} 
          <script>console.log({{collection.products | json}})</script>
            <div class="row">
                {%- for product in collection.products -%}
                  <div class="col-12">
                    {% render 'card-template' type: 'sub-task', product: product  %}
                  </div>
                {%- endfor -%}
            </div>

            {%- if paginate.pages > 1 -%}
              {% render 'pagination-snippets' paginate: paginate %}
            {%- endif -%}
          {% endpaginate %}
        </div>
      </div>
    </div>
    {% render 'FAQs', section: section %}
  </div>
</div>
 
{% schema %}
  {
    "name" : "Collection Sub-Task",
    "tag" : "section",
    "settings" : [
      {
        "type": "header",
        "content": "Section Related Collection"
      },
      {
        "type": "text",
        "id": "related_title",
        "label": "Title"
      },
      {
        "type": "text",
        "id": "related_subtitle",
        "label": "Subtitle"
      },
      {
        "type": "header",
        "content": "FAQs"
      },
      {
        "type": "text",
        "id": "faq_title",
        "label": "Title"
      },
      {
        "type": "image_picker",
        "id": "faq_image",
        "label": "Image"  
      },
      {
        "type": "paragraph",
        "content": "Add block 'FAQ Item'"
      }
    ],
    "blocks" : [
      {
        "type" : "filter_group",
        "name" : "Filter Group",
        "settings" : [
          {
            "type": "text",
            "id": "title",
            "label": "Filter Title"
          }

        ]
      },
      {
        "type" : "filter_price",
        "name" : "Filter Price",
        "settings" : [
          {
            "type": "text",
            "id": "title",
            "label": "Filter Title"
          }
        ]
      },
      {
        "type" : "filter_rating",
        "name" : "Filter Rating",
        "settings" : [
          {
            "type": "text",
            "id": "title",
            "label": "Filter Rating"
          }
        ]
      },
      {
        "type" : "faq_item",
        "name" : "FAQ Item",
        "settings" : [
          {
            "type": "text",
            "id": "question",
            "label": "Question"
          },
          {
            "type": "text",
            "id": "answer",
            "label": "Answer"
          }
        ]
      }
    ]
  }
{% endschema %}