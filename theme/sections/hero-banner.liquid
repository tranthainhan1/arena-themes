{%- include 'hero-banner-snippets'  -%}

{% liquid 
  assign bg_color     = section.settings.bg_color
  assign image_margin = section.settings.image_margin
%}

<style>
  .hero-banner[data-section-id="{{section.id}}"] .hero-banner__wrapper{
    background-color: {{bg_color}};
  }
  @media screen and (min-width: 1441px){
    .hero-banner[data-section-id="{{section.id}}"] .hero-banner__wrapper .hero-banner__image-desktop{
      margin: {{image_margin}};
    }
  }
</style>

{% schema %}
{
  "name": "Hero Banner",
  "tag": "section",
  "settings": [
    {
      "type": "paragraph",
      "content": "Created by 'Hero Banner' section"
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background color"
    },
    {
      "type": "checkbox",
      "id": "reserve_order",
      "label": "Reserve order"
    },
    {
      "type": "header",
      "content": "Image settings"
    },
    {
      "type": "image_picker",
      "id": "image_desktop",
      "label": "Image Desktop"
    },
    {
      "type": "text",
      "id": "image_margin",
      "label": "Margin",
      "placeholder": "E.g: 0px 5px 10px 20px"
    },
    {
      "type": "image_picker",
      "id": "image_mobile",
      "label": "Image Mobile"
    },
    {
      "type": "header",
      "content": "Text box settings"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading"
    },
    {
      "type": "text",
      "id": "paragraph_1",
      "label": "Paragraph 1"
    },
    {
      "type": "html",
      "id": "paragraph_list",
      "label": "Paragraph List"
    },
    {
      "type": "text",
      "id": "item_on_mobile",
      "label": "Show item on mobile",
      "info": "Use for 'Paragraph list'"
    }
  ],
  "presets": [
    {
      "name": "Hero Banner",
      "category": "Banner"
    }
  ]
}
{% endschema %}
