{
  "name": "Hero Banner",
  "tag": "section",
  "settings": [
    {
      "type": "paragraph",
      "content": "Created by 'Hero Banner' section"
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background color"
    },
    {
      "type": "checkbox",
      "id": "reserve_order",
      "label": "Reserve order"
    },
    {
      "type": "header",
      "content": "Image settings"
    },
    {
      "type": "image_picker",
      "id": "image_desktop",
      "label": "Image Desktop"
    },
    {
      "type": "image_picker",
      "id": "image_mobile",
      "label": "Image Mobile"
    },
    {
      "type": "header",
      "content": "Text box settings"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading"
    },
    {
      "type": "text",
      "id": "paragraph_1",
      "label": "Paragraph 1"
    },
    {
      "type": "html",
      "id": "paragraph_2",
      "label": "Paragraph 2"
    }
  ],
  "presets": [
    {
      "name": "Hero Banner",
      "category": "Banner"
    }
  ]
}
