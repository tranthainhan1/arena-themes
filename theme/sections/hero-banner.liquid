{%- include 'hero-banner-snippets'  -%}

{% liquid 
  assign bg_color = section.settings.bg_color  
%}

<style>
  .hero-banner[data-section-id="{{section.id}}"] .hero-banner__wrapper{
    background-color: {{bg_color}};
  }
</style>

