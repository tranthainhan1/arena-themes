{%- include 'hero-banner-snippets' -%}

{% schema %}
  {
    "name": "Hero Banner",
    "tag": "section",
    "settings": [
      {
        "type": "header",
        "content": "General settings"
      },
      {
        "type": "select",
        "id": "layout",
        "label": "Layout",
        "options": [
          {
            "value": "boxed",
            "label": "Boxed"
          }
        ],
        "default": "boxed"
      },
      {
        "type": "header",
        "content": "Text box"
      },
      {
        "type": "text",
        "id": "textbox_width",
        "label": "Text box width"
      },
      {
        "type": "select",
        "id": "text_align",
        "label": "Text align",
        "options": [
          {
            "value": "left",
            "label": "Left"
          },
          {
            "value": "center",
            "label": "Center"
          },
          {
            "value": "right",
            "label": "Right"
          }
        ],
        "default": "left"
      },
      {
        "type": "text",
        "id": "heading",
        "label": "Heading",
        "default": "Your One-Stop Shopify Companion"
      },
      {
        "type": "text",
        "id": "subheading",
        "label": "Subheading",
        "default": "Proud be a Shopify Expert, we have always been a companion for market leaders worldwide since 2015"
      },
      {
        "type": "text",
        "id": "btn_label",
        "label": "Button label",
        "default": "Learn more"
      },
      {
        "type": "url",
        "id": "btn_url",
        "label": "Button label"
      },
      {
        "type": "header",
        "content": "Image settings"
      },
      {
        "type": "image_picker",
        "id": "image",
        "label": "Image"
      },
      {
        "type": "text",
        "id": "image_width",
        "label": "Image width",
        "placeholder": "E.g: 220 or 500",
        "info": "Set width auto if empty."
      }
    ]
  }
{% endschema %}