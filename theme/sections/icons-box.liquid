{%- include 'icons-box-snippets' -%} 

{% liquid 
  assign bg_color = section.settings.bg_color 
%}

<style>
  {%- if bg_color != blank -%}
    .icons-cart .icons-cart__wrapper{
      background: {{bg_color}};
    }
  {%- endif -%}
  .tns-autowidth{
    display: block!important;
  }
  .icons-cart .icons-cart__list .icons-cart__item .wrapper{
    width: 250px;
    height: 300px;
  }
  .icons-cart .icons-cart__list{
    max-width: 1400px;
  }
  .js-tns .icons-cart__item{
    padding-right: 30px;
  }
  .tns-inner{
    padding-left: 15px;
  }
  .js-tns:not(.tns-carousel) > div:not(:last-child){
    margin: 0;
  }
  .blur-up {
  transition: filter 50ms, -webkit-filter 50ms;
}
</style>
{% schema %}
  {
    "name": "Icons Box",
    "tag": "section",
    "settings": [
      {
        "type": "paragraph",
        "content": "Created by section \"Icons Box\""
      },
      {
        "type": "select",
        "id": "layout",
        "label": "Layout",
        "options": [
          {
            "value": "boxed",
            "label": "Boxed"
          }
        ],
        "default": "boxed"
      },
      {
        "type": "color",
        "id": "bg_color",
        "label": "Background color"
      },
      {
        "type": "header",
        "content": "Section Heading"
      },
      {
        "type": "text",
        "id": "heading",
        "label": "Heading",
        "default": "Let Us Setup Your Shopify Store"
      },
      {
        "type": "text",
        "id": "subheading",
        "label": "Subheading",
        "default": "Unlock your storeâ€™s full potential"
      },
      {
        "type": "header",
        "content": "Button"
      },
      {
        "type": "text",
        "id": "btn_title",
        "label": "Button label",
        "default": "View All Service We Offer"
      },
      {
        "type": "url",
        "id": "btn_url",
        "label": "Button link"
      }
    ],
    "blocks": [
      {
        "type": "icon_item",
        "name": "Icon item",
        "settings": [
          {
            "type": "html",
            "id": "icon",
            "label": "Icon"
          },
          {
            "type": "text",
            "id": "block_title",
            "label": "Title"
          },
          {
            "type" : "url",
            "id" : "block_url",
            "label" : "URL for item "
          }
        ]
      }
    ],
    "presets": [
      {
        "category": "Banner",
        "name": "Icons Box"
      }
    ]
  }
{% endschema %}