{%- include 'custom-content-snippets' -%}

{% liquid 
  assign bg_color   = section.settings.bg_color
%}

<style>
   {%- if bg_color != blank -%}
   .custom-content[data-section-id="{{section.id}}"] .custom-content__wrapper{
      background-color: {{bg_color}};
   }
   {%- endif -%}
</style>

{% schema %}
{
  "name": "Custom Content",
  "tag": "section",
  "settings": [
    {
      "type": "paragraph",
      "content": "Created by 'Custom Content' section"
    },
    {
      "type": "header",
      "content": "LAYOUT"
    },
    {
      "type": "select",
      "id": "layout",
      "label": "Layout",
      "options": [
        {
          "value": "boxed",
          "label": "Boxed"
        }
      ],
      "default": "boxed"
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background color"
    }
  ],
  "blocks": [
    {
      "type": "text_box",
      "name": "Text box",
      "settings": [
        {
          "type": "header",
          "content": "Text box content"
        },
        {
          "type": "text",
          "id": "heading",
          "label": "Heading"
        },
        {
          "type": "text",
          "id": "subheading",
          "label": "Subheading"
        },
        {
          "type": "color",
          "id": "text_color",
          "label": "Text color"
        },
        {
          "type": "image_picker",
          "id": "image_mobile",
          "label": "Image mobile"
        },
        {
          "type": "text",
          "id": "btn_title",
          "label": "Button title"
        },
        {
          "type": "url",
          "id": "btn_url",
          "label": "Button URL"
        },
        {
          "type": "header",
          "content": "Add Custom HTML"
        },
        {
          "type": "html",
          "id": "custom_html",
          "label": "Custom HTML"
        },
        {
          "type": "header",
          "content": "Block settings"
        },
        {
          "type": "text",
          "id": "items_resp",
          "label": "Width (1-12)",
          "info": "0 to hide. E.g: 4,6,12"
        }
      ]
    },
    {
      "type": "image",
      "name": "Image",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "url",
          "id": "img_url",
          "label": "Image URL"
        },
        {
          "type": "header",
          "content": "Block settings"
        },
        {
          "type": "text",
          "id": "items_resp",
          "label": "Width (1-12)",
          "info": "0 to hide. E.g: 4,6,12"
        },
        {
          "type": "range", 
          "id": "align_vertical",
          "label": "Align vertical",
          "step": 1,
          "min": 0,
          "max": 100,
          "unit": "%",
          "default": 50
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Custom content",
      "category": "Advanced layout"
    }
  ]
}

{% endschema %}
