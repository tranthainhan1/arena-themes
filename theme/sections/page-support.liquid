<div class="support-template" data-section-id="{{section.id}}" data-section-type="support-template">
  <div class="container">
    <div class="support-template__wrapper">
      {%- for block in section.blocks -%}
        <div class="support-template__block">
          {% render 'page-support-snippets' type: block.type, block: block  %}
        </div>
      {%- endfor -%} 
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Page Support",
  "tag": "section",
  "blocks": [
    {
      "type": "custom_content",
      "name": "Custom content",
      "settings": [
        {
          "type": "paragraph",
          "content": "Created by 'Hero Banner' section"
        },
        {
          "type": "header",
          "content": "Block settings"
        },
        {
          "type": "color",
          "id": "bg_color",
          "label": "Background"
        },
        {
          "type": "checkbox",
          "id": "align_top",
          "label": "Align top"
        },
        {
          "type": "checkbox",
          "id": "reserve_order",
          "label": "Reserve order"
        },
        {
          "type": "header",
          "content": "Image settings"
        },
        {
          "type": "image_picker",
          "id": "image_desktop",
          "label": "Image Desktop"
        },
        {
          "type": "text",
          "id": "image_margin",
          "label": "Margin",
          "placeholder": "E.g: 0px 5px 10px 20px"
        },
        {
          "type": "image_picker",
          "id": "image_mobile",
          "label": "Image Mobile"
        },
        {
          "type": "header",
          "content": "Text box settings"
        },
        {
          "type": "text",
          "id": "heading",
          "label": "Heading"
        },
        {
          "type": "text",
          "id": "paragraph_1",
          "label": "Paragraph 1"
        },
        {
          "type": "html",
          "id": "paragraph_2",
          "label": "Paragraph 2"
        },
        {
          "type": "text",
          "id": "paragraph_2_on_mobile",
          "label": "Show on mobile",
          "info": "Use for 'Paragraph 2'"
        }
      ]
    },
    {
      "type": "banner_text",
      "name": "Banner text",
      "settings": [
        {
          "type": "text",
          "id": "block_title",
          "label": "Title"
        },
        {
          "type": "text",
          "id": "subtitle",
          "label": "Subtitle"
        },
        {
          "type": "text",
          "id": "btn_label",
          "label": "Label button"
        },
        {
          "type": "url",
          "id": "btn_url",
          "label": "Link of button"
        }
      ]
    },
    {
      "type": "hero_banner",
      "name": "Hero banner",
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "label": "Heading"
        },
        {
          "type": "text",
          "id": "subheading",
          "label": "Subheading"
        },
        {
          "type": "text",
          "id": "btn_title",
          "label": "Button title"
        },
        {
          "type": "url",
          "id": "btn_url",
          "label": "Button URL"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        }
      ]
    },
    {
      "type": "separator",
      "name": "Separator",
      "settings": [
        {
          "type": "paragraph",
          "content": "Seperator Section use to create spacing between sections"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Section Label"
        },
        {
          "type": "text",
          "id": "height",
          "label": "Height",
          "placeholder": "E.g: 30px, 15px, 10px",
          "default": "30px, 15px"
        }
      ]
    }
  ]
}
{% endschema %}